extends base.pug

block content
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn Start Recording
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File 
            input(type="file", id="video", name="video", accept="video/*", required)
            label(for="thumb") Thumbnail File 
            input(type="file", id="thumb", name="thumb", accept="image/*", required)
            input(name="title",placeholder="Title",required,type="text",minlength=5)
            input(name="description",placeholder="Description",required,type="text",maxlength=140)
            input(name="hashtags",placeholder="Hashtags, seperated by comma",required,type="text")
            input(type="submit",value="Upload Video")

block scripts
    script(src="/static/js/recorder.js")